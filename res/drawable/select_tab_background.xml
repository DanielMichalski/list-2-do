<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true"
	      android:drawable="@drawable/tab_pressed_shape"/>
	<!-- pressed -->
	<item android:state_selected="true"
	      android:drawable="@drawable/tab_selected_shape"/>
	<!--  selected/highlighted -->

	<!--  Default should be last since Android goes from top down evaluation
		http://developer.android.com/resources/tutorials/views/hello-formstuff.html
		 -->
	<item android:drawable="@drawable/tab_default_shape"/>
	<!-- default -->
</selector>